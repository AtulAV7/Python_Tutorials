import pandas as pd
import matplotlib.pyplot as plt
df = pd.read_csv('sales.csv')
plt.scatter(df['month_number'], df['toothpaste'])
plt.title("Toothpaste Sales")
plt.xlabel("Month")
plt.ylabel("Sales")
plt.show()
plt.bar(df['month_number'], df['facecream'], label='Face Cream')
plt.bar(df['month_number'], df['facewash'], label='Face Wash', bottom=df['facecream'])
plt.legend()
plt.title("Face Products Sales")
plt.xlabel("Month")
plt.ylabel("Sales")
plt.show()
totals = df[['facecream', 'facewash', 'toothpaste', 'bathingsoap', 'shampoo', 'moisturizer']].sum()
plt.pie(totals, labels=totals.index, autopct='%1.1f%%')
plt.title("Total Sales by Product")
plt.show()